.col-md-8.col-md-offset-2
  %ol.breadcrumb
    %li.active Lists

  .page-header
    %h1
      Lists
      %small Edit

  %form{name: 'list', method: 'post', action: '/lists/edit'}
    .form-group
      %label{for: 'name'} List Name
      %input.form-control{type: 'text', name: 'list[name]', id: 'name', required: '', value: @list.name}
    .form-group
      %label{for: 'shared_with'} Level
      %select.form-control{name: 'list[shared_with]', id: 'shared_with', required: ''}
        - ['PRIVATE', 'SHARED', 'PUBLIC'].each do |option|
          %option{value: option, selected: option == @list.shared_with}
            = option

    %button.btn.btn-primary{type: 'submit'} Create
